<UserControl x:Class="kvdt_kiosk.Views.Kvdt.ReturnJourney.ReturnJourneyScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:kvdt_kiosk.Views.Kvdt.ReturnJourney"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#074481">
        <Grid.RowDefinitions>
            <RowDefinition Height="75"></RowDefinition>
            <RowDefinition Height="75"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Text="Return Journey" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#FFFFFF" FontWeight="Bold" Margin="0,15,0,0"></TextBlock>
        <TextBlock x:Name="TxtDate" Text="Current Date" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#D1D4D7" FontWeight="Bold" Grid.Row="1"/>
        <Grid Grid.Row="2" x:Name="GridJourneyPassenger"></Grid>
    </Grid>
</UserControl>
