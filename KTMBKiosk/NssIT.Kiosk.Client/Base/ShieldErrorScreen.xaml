<Window x:Class="NssIT.Kiosk.Client.Base.ShieldErrorScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NssIT.Kiosk.Client.Base"
        mc:Ignorable="d"
        Stylus.IsPressAndHoldEnabled="False"
        ScrollViewer.CanContentScroll="True"
        WindowStartupLocation="CenterScreen"
        d:DesignHeight="768" d:DesignWidth="1024"
        Title="Kiosk Error Shield Screen" Topmost="True" WindowState="Maximized" WindowStyle="None">
    <Grid>
        <TextBlock Text="System Shutting Down .." 
                   HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Left" FontSize="16" TextWrapping="Wrap" MaxWidth="900"
                   x:Name="TxtMsg">
        </TextBlock>
    </Grid>
</Window>
