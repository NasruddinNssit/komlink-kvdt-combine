<Page x:Class="NssIT.Kiosk.Client.ViewPage.Payment.pgPayment"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NssIT.Kiosk.Client.ViewPage.Payment"
      mc:Ignorable="d"  Stylus.IsPressAndHoldEnabled="False"
      d:DesignHeight="800" d:DesignWidth="1080"
      FontFamily="Roboto" Background="White"
      Title="Payment" Loaded="Page_Loaded" Unloaded="Page_Unloaded">

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Frame x:Name="FrmPayInfo" Grid.Column="0" Grid.Row="0" Panel.ZIndex="1"/>

        <Border x:Name="BdPay" Grid.Column="0" Grid.Row="0" Panel.ZIndex="10" Background="#05FFFFFF" Visibility="Collapsed">
            <Frame x:Name="FrmGoPay" VerticalAlignment="Center" HorizontalAlignment="Center" NavigationUIVisibility="Hidden"/>
        </Border>
        
    </Grid>
</Page>