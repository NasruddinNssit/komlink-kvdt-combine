<Page x:Class="NssIT.Kiosk.Client.ViewPage.Intro.pgIntro"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NssIT.Kiosk.Client.ViewPage.Intro"
      mc:Ignorable="d" 
      Stylus.IsPressAndHoldEnabled="False"
      d:DesignHeight="710" d:DesignWidth="750"
      FontFamily="Segoe UI" Background="White"
      Loaded="Page_Loaded" Unloaded="Page_Unloaded"
      Title="Welcome Intro">

    <ScrollViewer x:Name="ScvIntro" ScrollViewer.CanContentScroll="False"
                VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Disabled" Margin="0,0,0,0" Background="White" >
        <Canvas x:Name="CvIntroFrame" Margin="-4000,0,0,0">
            <local:uscIntroEnglish Canvas.Left="4000" Width="{Binding ElementName=ScvIntro, Path=ActualWidth}" Height="{Binding ElementName=ScvIntro, Path=ActualHeight}" />
        </Canvas>
    </ScrollViewer>
</Page>