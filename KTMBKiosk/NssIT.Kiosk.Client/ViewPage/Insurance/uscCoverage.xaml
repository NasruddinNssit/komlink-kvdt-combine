<UserControl x:Class="NssIT.Kiosk.Client.ViewPage.Insurance.uscCoverage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NssIT.Kiosk.Client.ViewPage.Insurance"
             mc:Ignorable="d" 
             Width="160" Loaded="UserControl_Loaded">
    
    <Border Background="#01FFFFFF">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="130" />
                <RowDefinition MinHeight="110" />
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Width="110" Height="110" Background="#01FFFFFF" x:Name="BdCoverageIcon"/>

            <TextBlock Grid.Row="1" FontSize="13" Width="140" 
                       Background="#01FFFFFF" TextAlignment="Center"
                       TextWrapping="WrapWithOverflow" Margin="0,0,0,10">
                <!--TextTrimming="CharacterEllipsis"-->
                
                <Run FontWeight="Bold" Text="Accidental Death/Total &amp; Partial Disablement" x:Name="TxtShortDesc"/>
                <LineBreak/>
                <Run Text="Up to RM 50,000" x:Name="TxtLongDesc"/>
            </TextBlock>
        </Grid>
    </Border>

</UserControl>
