<Page x:Class="NssIT.Kiosk.Client.ViewPage.Info.pgInfo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NssIT.Kiosk.Client.ViewPage.Info"
      mc:Ignorable="d" 
      d:DesignHeight="50" d:DesignWidth="750"
      FontFamily="Segoe UI"
      Stylus.IsPressAndHoldEnabled="False"
      Title="User Info" Background="White">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="TxtInfo" Grid.Column="0" Grid.Row="0" Text="Kiosk Ticketing System" Padding="5,3,5,3" Foreground="#FF777777" FontFamily="Roboto" FontSize="32" VerticalAlignment="Bottom" TextTrimming="CharacterEllipsis" />
    </Grid>
</Page>
