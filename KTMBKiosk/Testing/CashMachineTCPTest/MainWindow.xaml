<Window x:Class="CashMachineTCPTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CashMachineTCPTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded" Closing="Window_Closing">
    <StackPanel>
        <WrapPanel>
            <Button x:Name="btnBankNotePage" Content="Bank Note Page" Margin="20,5" Width="150" Click="BtnBankNotePage_Click" />
        </WrapPanel>
        
        <TextBox x:Name="txtMsg" Margin="10,5" TextWrapping="Wrap" Text="" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" AcceptsTab="True" AcceptsReturn="True" Height="114"/>
        <Button x:Name="btnClearMsg" Content="Clear Msg" Margin="0,5,10,5" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="122"/>

        <Frame x:Name="frmWorkSpace" Margin="5"/>
    </StackPanel>
</Window>
